<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">


    <EditText
        android:id="@+id/set_nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Nom"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:inputType="textPersonName"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginTop="70dp"
        android:padding="6dp"
        />
    <TextView
        android:id="@+id/nom_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Nom : "
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="70dp"
        android:padding="6dp"/>


    <EditText
        android:id="@+id/set_prenom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Prénom"
        android:textAlignment="center"
        android:layout_below="@id/nom_text"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:padding="6dp"
        />
    <TextView
        android:id="@+id/prenom_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_below="@id/nom_text"
        android:text="Prénom : "
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:padding="6dp"/>


    <EditText
        android:id="@+id/set_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/set_prenom"
        android:layout_centerInParent="true"
        android:textAlignment="center"
        android:hint="Age"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginTop="10dp"
        android:padding="6dp"
        />
    <TextView
        android:id="@+id/age_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Age  : "
        android:layout_below="@+id/prenom_text"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:padding="6dp"/>


    <TextView
        android:id="@+id/set_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/set_age"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:padding="6dp"/>
    <TextView
        android:id="@+id/statut_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Statut  : "
        android:layout_below="@+id/set_age"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:padding="6dp"/>

    <TextView
        android:id="@+id/cin_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="CIN  : "
        android:layout_below="@+id/statut_text"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:padding="6dp"/>
    <EditText
        android:id="@+id/cin_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/statut_text"
        android:layout_centerInParent="true"
        android:textAlignment="center"
        android:hint="ex: A0000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginEnd="100dp"
        android:layout_marginTop="10dp"
        android:padding="6dp"
        />


    <Button
        android:id="@+id/valider_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Modifier"
        android:background="#0955A8"
        android:layout_below="@id/cin_value"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="90dp"
        android:layout_marginTop="100dp"
        android:padding="10dp"
        android:textAllCaps="false"/>


</RelativeLayout>